shell -${SHELL}
caption always "%n(%t)"
defscrollback 1024
startup_message off
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'
altscreen on
vbell off

# Start with screen 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

bindkey ^[[d prev
bindkey ^[[c next
bindkey ^[[a title
bindkey ^[[b screen 1
