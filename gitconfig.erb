[color]
  ui = auto
[color "branch"]
  current = blue reverse
  local = blue
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = blue
  untracked = red

  
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p


